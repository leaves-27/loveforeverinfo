.modal{
    position: fixed;
    left: 0;
    top: 0;
    z-index: 11;
}
.mask{
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.5);
}
.modal_body{
    width: 100%;
    position: fixed;
    left: 0;
    bottom: 0rpx;
    background-color: #F6F6F6;
}
.goods{
    margin-bottom: 24rpx;
}
.good-item{
    display: flex;
    border-bottom: 1rpx solid #F6F6F6;
    background-color: #FFFFFF;
    padding: 24rpx;
}
.good-item:last-child{
    border-bottom: none;
}

.main_main{
    display: flex;
    flex: 1;
}

.main_bar{
    display: flex;
    align-items: center;
    justify-content: center;
}

.menu-logo{
    width: 144rpx;
    height: 144rpx;
}
.menu-intro{
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    padding-left: 20rpx;
}
.menu-intro_name{
    display: flex;
    align-items: center;
}
.menu-intro_price{
    font-family: PingFangSC-Regular;
    font-size: 28rpx;
    color: #FE0000;
}

.button{
    display: inline-block;
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    font-family: PingFangSC-Regular;
    font-size: 28rpx;
    text-align: center;
    border-bottom: 1rpx solid #F6F6F6;
}
.button--default{
    background-image: none;
    background-color: #FFFFFF;
    color: #262626;
}

.arrow{
    width: 12rpx;
    height: 20rpx;
}
