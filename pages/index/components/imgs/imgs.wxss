page{
    height: 100%;
}
.container{
    display: flex;
    align-items: center;
    justify-content: center;
    height: 100%;
}

.button{
    display: inline-block;
    width: 80%;
    height: 100rpx;
    line-height: 100rpx;

    border-radius: 4rpx;
    font-family: PingFangSC-Regular;
    font-size: 32rpx;
    text-align: center;
    color: #FFFFFF;
}
.button--default{
    background-image: none;
    background-color: #FFFFFF;
    border: 2rpx solid #DDDDDD;
    color: #1E1E1E;
}
.button--active{
    background-image: linear-gradient(-140deg, #FF6060 0%, #FE0000 100%);
    color: #FFFFFF;
    border: none;
}
.img-item{
    width: 100%;
    display: block;
}
