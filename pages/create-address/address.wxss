.form{
  margin-top: 16rpx;
  padding-left: 24rpx;
  padding-right: 24rpx;
  background-color: #FFFFFF;
}
.form-item{
  display: flex;
  padding-top: 24rpx;
  padding-bottom: 24rpx;
}
.form-item_key{
  width: 170rpx;
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #1E1E1E;
}
.form-item_value{
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #1E1E1E;
  flex: 1;
}
.address-detail{
  height: 205rpx;
}

.button{
  display: block;
  margin-left: 24rpx;
  margin-right: 24rpx;
  margin-top: 40rpx;
  height: 100rpx;
  line-height: 100rpx;

  border-radius: 6rpx;
  font-family: PingFangSC-Regular;
  font-size: 32rpx;
  text-align: center;
}
.button--disabled{
  background: #DEDEDE;
  color: #666666;
}
.button--active{
  background-image: linear-gradient(-140deg, #FF6060 0%, #FE0000 100%);
  color: #FFFFFF;
  border: none;
}
