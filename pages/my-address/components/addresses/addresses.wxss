.addresses-item{
  margin-top: 16rpx;
  padding-left: 24rpx;
  padding-right: 24rpx;
  background-color: #FFFFFF;
}
.item_main{
  padding-top: 32rpx;
  padding-bottom: 32rpx;
}
.item_bar{
  padding-top: 24rpx;
  padding-bottom: 24rpx;
  display: flex;
}
.boundary{
  border-bottom: 1px solid #EEEEEE;
  width:100%;
  height: 0rpx;
}
.name-phone{
  font-family: PingFangSC-Regular;
  font-size: 29.25rpx;
  color: #262626;
}
.address{
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #919191;
}

.radio{
  width: 38rpx;
  height: 38rpx;
  border-radius: 38rpx;
  border: 1rpx solid #DEDEDE;
  margin-right: 10rpx;
}
.radio--active{
  background-color: #FE0000;
  border: 1rpx solid #FE0000;
  background-image: url('https://fm.oneshell.cn/static/icon_selected.png');
  background-repeat: no-repeat;
  background-position: center center;
  background-size: 38rpx 38rpx;
}
