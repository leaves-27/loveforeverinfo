<!--logs.wxml-->
<view class="order-detail">
  <view class="order-detail_header">
    <view class="header_main">
      <view class="order-status" wx:if="{{ order.status === '1' }}">
        待付款
      </view>
      <view class="order-status" wx:elif="{{ order.status === '2' }}">
        配送中
      </view>
      <view class="order-status" wx:elif="{{ order.status === '3' }}">
        已签收
      </view>
      <view class="order-desc">
        {{ order.desc }}
      </view>
    </view>
    <view class="header_bar">
      <image
        wx:if="{{ order.status === '1' }}"
        class="icon--wait-pay"
        src="../../images/waitpay_detail.png"  />
      <image
        wx:elif="{{ order.status === '2' }}"
        class="icon--wait-pay"
        src="../../images/deliverying_detail.png"  />
      <image
        wx:elif="{{ order.status === '3' }}"
        class="icon--wait-pay"
        src="../../images/singed_detail.png"  />
    </view>
  </view>
  <view  class="order-detail_body">
    <view class="user">
      <view class="user_bar">
        <view class="icon--address">
          <image src="{{ iconAddressUrl }}" />
        </view>
      </view>
      <view class="user_main">
        <view class="name-phone">
          {{ user.name }} {{ user.phone }}
        </view>
        <view class="address">
          {{ user.address }}
        </view>
      </view>
    </view>
    <view class="good content_main">
      <view class="main_main">
        <image class="menu-logo" src="{{ good.menuLogoUrl }}" />
        <view class="menu-intro">
          <view class="menu-intro_name">{{ good.name }}</view>
          <view class="menu-intro_price">{{ good.price }}</view>
        </view>
      </view>
      <view class="main_bar">
        x{{ good.amount }}
      </view>
    </view>
    <view class="order">
      <view class="order-item">
        <view class="order-item_key">
          订单编号
        </view>
        <view class="order-item_value">
          {{ order.code }}
        </view>
      </view>
      <view class="order-item">
        <view class="order-item_key">
          创建时间
        </view>
        <view class="order-item_value">
          {{ order.createTime }}
        </view>
      </view>
      <view class="order-item">
        <view class="order-item_key">
          付款时间
        </view>
        <view class="order-item_value">
          {{ order.payTime }}
        </view>
      </view>
      <view class="order-item">
        <view class="order-item_key">
          成交时间
        </view>
        <view class="order-item_value">
          {{ order.successTime }}
        </view>
      </view>
    </view>
  </view>
  <view  class="order-detail_footer">
    <button
      wx:if="{{ order.status === '1' }}"
      class="button button--active"
      data-id="{{ order.id }}"
      bindtap="goPay">支付</button>
    <button
      wx:elif="{{ order.status === '2' }}"
      class="button button--active"
      data-id="{{ order.id }}"
      bindtap="goDeliveryDetail">配送中</button>
    <button
      wx:elif="{{ order.status === '3' }}"
      class="button button--active"
      data-id="{{ order.id }}"
      bindtap="goBuy">再次购买</button>
  </view>
</view>
