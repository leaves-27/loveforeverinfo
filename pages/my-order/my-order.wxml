<!--logs.wxml-->
<view class="orders">
  <view class="tabs">
    <block wx:for="{{ tabs }}">
      <view
        wx:if="{{ selectedTabId === item.id }}"
        class="tab tab--selected">
        {{ item.name }}
        <view class="line--selected"></view>
      </view>
      <view
        wx:else
        class="tab"
        bindtap="tabChange"
        data-item="{{ item }}">
        {{ item.name }}
      </view>
    </block>
  </view>

  <orders
    wx:if="{{ orders.length > 0 }}"
    selectedTabId="{{ selectedTabId }}"
    tabs="{{ tabs }}"
    orders="{{ orders }}"
    bind:cancelorder="cancelOrder"
  />
  <exception
    wx:else
    text="暂无订单"
  />
</view>
