.order-progress_header{
  display: flex;
  flex-direction: column;
  /*align-items: left;*/
  /*justify-content: space-around;*/
  margin-top: 16rpx;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
  background-color: #FFFFFF;
  padding-left: 24rpx;
  padding-right: 24rpx;
}
.order-progress_body{
  background-color: #FFFFFF;
  border-top:1rpx solid #EEEEEE;
}

.title{
  font-family: PingFangSC-Regular;
  font-size: 32rpx;
  color: #262626;
  margin-bottom: 10rpx;
}

.desc{
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #919191;
}

.progress{
  display: flex;
}
.progress_icon{

}
.progress_desc{
  padding-top: 32rpx;
  padding-bottom: 32rpx;
}
.desc_title{
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #262626;
  margin-bottom: 8rpx;
}
.desc_time{
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #919191;
}
.icon{
  width: 66rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.icon_top{
  flex: 1;
  width: 2rpx;
  height: 100%;
}
.icon_middle{
  width: 28rpx;
  height: 28rpx;
  border-radius: 14rpx;
  background-color: rgba(254, 0, 0, 0.1);
}
.icon_bottom{
  flex: 1;
  width: 2rpx;
  height: 100%;
}

.icon--default{
  background-color: #DEDEDE;
}
.icon--active{
  background-color: #F23B51;
}
