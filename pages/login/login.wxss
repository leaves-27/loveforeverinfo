@import "../../wxss/button.wxss";
page{
    background-color: #FFFFFF;
}
.container{
    padding-left: 24rpx;
    padding-right: 24rpx;
}
.main{
    width: 100%;
    height: 430rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}
.login-logo{
    width: 144rpx;
    height: 144rpx;
    background-image: linear-gradient(-129deg, #FF1F1F 0%, #D02128 100%);
    background: rgba(255,255,255,0.20);
    border: 1rpx solid #DEDEDE;
    border-radius: 31.2rpx;
}
.input{
    width: 100%;
    height: 76rpx;
    line-height: 76rpx;
    font-family: PingFangSC-Regular;
    font-size: 32rpx;
    border-bottom: 2rpx solid #EBEBEB;
    margin-bottom: 119rpx;
    text-align: center;
}
::-webkit-input-placeholder { /* WebKit browsers */
    color: #CFCFCF;
}
.input--disabled{
    color: #CFCFCF;
}

.button{
    display: block;
    width: 100%;
    height: 104rpx;
    line-height: 104rpx;
    border-radius: 8rpx;
    font-family: PingFangSC-Regular;
    font-size: 24rpx;
    text-align: center;
}

.button--default{
    background-image: none;
    background-color: #FFFFFF;
    border: 2rpx solid #DDDDDD;
    color: #1E1E1E;
}
.button--active{
    background-image: linear-gradient(-140deg, #FF6060 0%, #FE0000 100%);
    color: #FFFFFF;
    border: none;
}
