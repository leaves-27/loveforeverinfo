.order-confirm_header{
  margin-bottom: 16rpx;
  padding-left: 24rpx;
  padding-right: 24rpx;
  height: 152rpx;
  display: flex;
  background-color: #FFFFFF;
}
.order-confirm_body{
  margin-bottom: 141rpx;
}
.order-confirm_footer{
  width: 100%;
  height: 100rpx;
  position: fixed;
  left: 0rpx;
  bottom: 0rpx;
}
.header_left{
  width: 46rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.header_middle{
  flex: 1;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.header_right{
  width: 28.3rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.address_icon{
  width: 26rpx;
  height: 37rpx;
}
.address_desc{
  padding-left: 16rpx;
  padding-right: 16rpx;
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #363433;
}

.arrow{
  width: 12rpx;
  height: 20rpx;
}

.good{
  background-color: #FFFFFF;
  padding-left: 24rpx;
  padding-right: 24rpx;
}
.content_bar{
  display: flex;
  justify-content: flex-end;
  padding-bottom: 28rpx;
}
.main_main{
  display: flex;
  flex: 1;
  padding-bottom: 32rpx;
  padding-top: 30rpx;
}

.main_bar{
  display: flex;
  align-items: flex-end;
}

.menu-logo{
  width: 144rpx;
  height: 144rpx;
}
.menu-intro{
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding-left: 20rpx;
}
.menu-intro_price{
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #FE0000;
}

.order-item{
  border-top: 1rpx solid #EEEEEE;
  display: flex;
  justify-content: space-between;
  padding-top: 25rpx;
  padding-bottom: 25rpx;
}
.order-item_icon{
  width: 48rpx;
  height: 48rpx;
  margin-right: 16rpx;
}
.order-item_key{
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #919191;
  letter-spacing: 0;
  line-height: 40rpx;
  flex: 1;
}
.order-item_value{
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #262626;
  text-align: right;
  line-height: 32rpx;
}
.count-control{
  display: flex;
}
.count-control_add{
  width: 48rpx;
  height: 48rpx;
  line-height: 48rpx;
  text-align: center;
  border: 1rpx solid #E5E5E5;
}
.count-control_value{
  border: 0;
  padding: 0;
  margin: 0;
  width: 88rpx;
  height: 48rpx;
  line-height: 48rpx;
  text-align: center;
  border: 1rpx solid #E5E5E5;
}
.count-control_delete{
  width: 48rpx;
  height: 48rpx;
  line-height: 48rpx;
  text-align: center;
  border: 1rpx solid #E5E5E5;
}
.pay_header{
  margin-top: 28rpx;
  padding-left: 24rpx;
  padding-right: 24rpx;
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #616161;
  margin-bottom: 16rpx;
}
.pay_body{
  background-color: #FFFFFF;
  margin-bottom: 16rpx;
}
.pay_footer{
  padding-left: 24rpx;
  padding-right: 24rpx;
  font-family: PingFangSC-Regular;
  font-size: 22rpx;
  color: #919191;
  letter-spacing: 0;
  text-align: left;
}
.pay-item{
  justify-content: flex-start;
  padding-left: 24rpx;
  padding-right: 24rpx;
}
.pay-item--active{
  background-color: #cccccc;
}
.pay-item--active .order-item_key{
  color: #FFFFFF;
}

input[type="text"],input[type="password"],textarea,button{
  outline-style: none;
  -webkit-appearance: none;
  padding: 0;
  padding: 0;
  margin: 0;
  margin: 0;
  outline: none;
}

button::after {
  border: none;
}

.button{
  display: inline-block;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;

  border-radius: 4rpx;
  font-family: PingFangSC-Regular;
  font-size: 32rpx;
  text-align: center;
  color: #FFFFFF;
}
.button--default{
  background-image: none;
  background-color: #FFFFFF;
  border: 2rpx solid #DDDDDD;
  color: #1E1E1E;
}
.button--active{
  background-image: linear-gradient(-140deg, #FF6060 0%, #FE0000 100%);
  color: #FFFFFF;
  border: none;
}

.button-interval--small{
  margin-left: 16rpx;
}

.radio{
  width: 38rpx;
  height: 38rpx;
  border-radius: 38rpx;
  border: 1rpx solid #DEDEDE;
}
.radio--active{
  background-color: #FE0000;
  border: 1rpx solid #FE0000;
  background-image: url('https://fm.oneshell.cn/static/icon_selected.png');
  background-repeat: no-repeat;
  background-position: center center;
  background-size: 38rpx 38rpx;
}



