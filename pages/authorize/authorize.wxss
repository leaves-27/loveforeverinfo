@import "../../wxss/button.wxss";
page{
    background-color: #FFFFFF;
    height: 100%;
}

.authorize{
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
}
.content{
    width: 80%;
}
.text{
    margin-bottom: 80rpx;
}
.text_header{
    font-size: 30rpx;
    color: #333;
    margin-bottom: 20rpx;
}
.text_body{
    font-size: 24rpx;
    color: #cccccc;
}
.button{
    display: block;
    width: 100%;
    height: 104rpx;
    line-height: 104rpx;
    border-radius: 8rpx;
    font-family: PingFangSC-Regular;
    font-size: 24rpx;
    text-align: center;
}

.button--default{
    background-image: none;
    background-color: #FFFFFF;
    border: 2rpx solid #DDDDDD;
    color: #1E1E1E;
}
.button--active{
    background-image: linear-gradient(-140deg, #FF6060 0%, #FE0000 100%);
    color: #FFFFFF;
    border: none;
}
