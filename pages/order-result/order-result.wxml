<view class="order-detail">
  <view  class="order-detail_body">
    <view class="status">
      <image class="status_icon" src="{{ status.iconUrl }}"></image>
      <view class="status_title">{{ status.title }}</view>
      <view class="status_desc">{{ status.desc }}</view>
    </view>
    <view class="good content_main">
      <view class="main_main">
        <image class="menu-logo" src="{{ good.menuLogoUrl }}" />
        <view class="menu-intro">
          <view class="menu-intro_name">{{ good.name }}</view>
          <view class="menu-intro_price">{{ good.price }}</view>
        </view>
      </view>
      <view class="main_bar">
        x{{ good.amount }}
      </view>
    </view>
    <view class="order">
      <view class="order-item">
        <view class="order-item_key">
          订单编号
        </view>
        <view class="order-item_value">
          {{ order.code }}
        </view>
      </view>
      <view class="order-item">
        <view class="order-item_key">
          创建时间
        </view>
        <view class="order-item_value">
          {{ order.createTime }}
        </view>
      </view>
      <view class="order-item">
        <view class="order-item_key">
          付款时间
        </view>
        <view class="order-item_value">
          {{ order.payTime }}
        </view>
      </view>
      <view class="order-item">
        <view class="order-item_key">
          成交时间
        </view>
        <view class="order-item_value">
          {{ order.successTime }}
        </view>
      </view>
    </view>
  </view>
