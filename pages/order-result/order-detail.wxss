.order-detail_header{
  margin-bottom: 16rpx;
  padding-left: 24rpx;
  padding-right: 24rpx;
}
.order-detail_body{
  margin-bottom: 141rpx;
}
.order-detail_footer{

}

input[type="text"],input[type="password"],textarea,button{
  outline-style: none;
  -webkit-appearance: none;
  padding: 0;
  padding: 0;
  margin: 0;
  margin: 0;
  outline: none;
}
button::after {
  border: none;
}

.button{
  display: inline-block;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;

  border-radius: 4rpx;
  font-family: PingFangSC-Regular;
  font-size: 32rpx;
  text-align: center;
  color: #FFFFFF;
}
.button--default{
  background-image: none;
  background-color: #FFFFFF;
  border: 2rpx solid #DDDDDD;
  color: #1E1E1E;
}
.button--active{
  background-image: linear-gradient(-140deg, #FF6060 0%, #FE0000 100%);
  color: #FFFFFF;
  border: none;
}

.button-interval--small{
  margin-left: 16rpx;
}

.order-detail_header{
  display: flex;
  background: rgba(255,255,255,0.20);
  background-image: linear-gradient(46deg, #FF484F 100%, #FE1010 0%);
}
.header_main{
  flex: 1;
  height: 194rpx;
  color: #FFFFFF;
  display:flex;
  flex-direction: column;
  justify-content: center;
  align-items:flex-start;
  padding-left: 38rpx;
}
.header_bar{
  width: 194rpx;
  height: 194rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.icon--wait-pay{
  width: 100rpx;
  height: 100rpx;
}
.order-status{
  padding-left: 38rpx;
  position: relative;
  font-family: PingFangSC-Regular;
  font-size: 32rpx;
  color: #FFFFFF;
  letter-spacing: 0;
}
.order-status::before{
  position: absolute;
  left: 0%;
  top: 50%;
  transform: translate(0, -50%);
  display: block;
  width: 12rpx;
  height: 12rpx;
  background: #F9BD10;
  border-radius: 8rpx;
  overflow: hidden;
  content: '';
}
.order-desc{
  padding-left: 38rpx;
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #FFFFFF;
}


.content_main{
  display: flex;
  padding-bottom: 58rpx;
}
.content_bar{
  display: flex;
  justify-content: flex-end;
  padding-bottom: 28rpx;
}

.main_main{
  display: flex;
  flex: 1;
}

.main_bar{
  display: flex;
  align-items: flex-end;
}

.menu-logo{
  width: 144rpx;
  height: 144rpx;
}
.menu-intro{
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding-left: 20rpx;
}
.menu-intro_price{
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #FE0000;
}

.user{
  background-color: #FFFFFF;
  padding-left: 24rpx;
  padding-right: 24rpx;
  padding-top: 32rpx;
  padding-bottom: 32rpx;
  display: flex;
  justify-content: flex-start;
  margin-bottom: 16rpx;
}
.user_main{
  display: flex;
  flex-direction: column;
}
.user_bar{
  display: flex;
  justify-content: center;
  align-items: center;
}
.good{
  background-color: #FFFFFF;
  padding-left: 24rpx;
  padding-right: 24rpx;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
}
.order{
  background-color: #FFFFFF;
  padding-left: 24rpx;
  padding-right: 24rpx;
}
.order-item{
  border-top: 1rpx solid #EEEEEE;
  display: flex;
  justify-content: space-between;
  padding-top: 25rpx;
  padding-bottom: 25rpx;
}
.order-item_key{
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #919191;
  letter-spacing: 0;
  line-height: 40rpx;
}
.order-item_value{
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #262626;
  text-align: right;
  line-height: 32rpx;
}
.icon--address{
  width: 26rpx;
  height: 37.5rpx;
  overflow: hidden;
  border: 1rpx solid #ff0000;
  margin-right: 20rpx;
}
.icon--address img{
  width: 100%;
}
