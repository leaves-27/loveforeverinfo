
.status{
  background-color: #FFFFFF;
  padding-top: 96rpx;
  box-sizing: border-box;
  padding-bottom: 40rpx;
}
.status_icon{
  width: 96rpx;
  height: 96rpx;
  display: block;
  margin-left: auto;
  margin-right: auto;
}
.status_title{
  font-family: PingFangSC-Medium;
  font-size: 32rpx;
  color: #3B3938;
  text-align: center;
  margin-top: 16rpx;
}
.status_desc{
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #919191;
  text-align: center;
  margin-top: 10rpx;
  margin-bottom: 40rpx;
}

input[type="text"],input[type="password"],textarea,button{
  outline-style: none;
  -webkit-appearance: none;
  padding: 0;
  padding: 0;
  margin: 0;
  margin: 0;
  outline: none;
}

button::after {
  border: none;
}

.button{
  display: block;
  width: 60%;
  height: 100rpx;
  margin-left: auto;
  margin-right: auto;
  line-height: 100rpx;

  border-radius: 8rpx;
  font-family: PingFangSC-Regular;
  font-size: 32rpx;
  text-align: center;
  background-color: transparent;
  border: 1rpx solid #e1e1e1;
