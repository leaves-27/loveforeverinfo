page {
  background-image: -webkit-linear-gradient(left, #D02128, #FE0000);
}
.content{
  margin-top: 100rpx;
  margin-left: 50rpx;
  margin-right: 50rpx;
}
.content_header{
  height: 16rpx;
  border-top-left-radius: 16rpx;
  border-top-right-radius: 16rpx;
  background: url('../../images/qr_border-top.png') no-repeat center center;
}
.content_main{
  padding-top: 60rpx;
  background-color: #FFFFFF;
  position: relative;
  left: 0;
  top: 0;
  padding-bottom: 50rpx;
}
.content_boundary{
  height: 40rpx;
  background-color: #F3F3F3;
  background-image: url("../../images/qr_border-middle.png");
  background-position:center center;
  background-repeat: no-repeat;
}
.content_footer{
  background-color: #FFFFFF;
  border-bottom-left-radius: 16rpx;
  border-bottom-right-radius: 16rpx;
  text-align: center;

  padding-top: 23rpx;
  padding-bottom: 75rpx;
  color: #616161;
  font-size: 26rpx;
}

.name{
  margin-bottom: 40rpx;
  text-align: center;
}
.qr{
  width: 380rpx;
  height: 380rpx;
  text-align: center;
  display: block;
  margin-left: auto;
  margin-right: auto;
}
.userLogo{
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  overflow: hidden;
  position: absolute;
  left: 50%;
  top: -80rpx;
  z-index: 100;
  margin-left: -40rpx;
}
