<!--index.wxml-->
<view class="container">
  <view class="my-info">
    <view class="my-info_main">
      <view class="main_main">
        <image class="logo" src="{{ userLogoUrl }}" />
        <view class="private-text">
          <view class="name">{{ name }}</view>
          <view class="phone">{{ phone }}</view>
        </view>
      </view>
    </view>
  </view>
  <view class="tabs">
    <block
      wx:for="{{ tabs }}"
      wx:key="{{ index }}">
      <view
        wx:if="{{ selectedTabId === item.id }}"
        class="tab tab--selected">
        {{ item.name }}
        <view class="line--selected"></view>
      </view>
      <view
          wx:else
          class="tab"
          bindtap="tabChange"
          data-item="{{ item }}">
        {{ item.name }}
      </view>
    </block>
  </view>
  <view class="orders">
    <view class="order" wx:for="{{ orders }}">
      <view class="order_header" wx:if="{{ selectedTabId ===  '01' }}">
        {{ item.createTime }}
      </view>
      <view class="order_body">
        <view class="good">
          <view class="good_main">
            <image class="menu-logo" src="{{ item.good.logoUrl }}" />
            <view class="menu-intro">
              <view wx:if="{{ selectedTabId ===  '01' }}" class="menu-intro_name">{{ item.good.name }}</view>
              <view wx:else class="menu-intro_name">{{ item.user.name }}</view>
              <view class="menu-intro_price">购买数量:{{ item.count }}个</view>
            </view>
          </view>
          <view class="good_bar">
            合计:<view>{{ item.good.price }}</view>
          </view>
        </view>
      </view>
    </view>
  </view>
</view>
