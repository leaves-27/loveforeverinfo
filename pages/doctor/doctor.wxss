.my-info{
  height: 243rpx;
  background-image: -webkit-linear-gradient(left, #FFB548, #F38C00);
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  padding-left: 32rpx;
  padding-right: 32rpx;
}
.my-info_main{
  flex: 1;
  display: flex;
  box-sizing: border-box;
}
.my-info_bar{
  height: 104rpx;
  line-height: 104rpx;
  display: flex;
  background: -webkit-linear-gradient(left, #564847 , #38372F);
  border-top-left-radius: 24rpx;
  border-top-right-radius: 24rpx;
  color: #FFFFFF;
  text-align: right;
  align-items: center;
}

.main_main{
  flex: 1;
  display: flex;
  align-items: center;
  box-sizing: border-box;
}
.main_bar{
  width: 88rpx;
  display: flex;
  align-items: center;
}
.qr{
  width: 52rpx;
  height: 52rpx;
}

.logo{
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
}
.private-text{
  flex: 1;
  padding-left: 20rpx;
}

.name{
  color: #FFFFFF;
}
.phone{
  color: rgba(255,255,255, 0.5);
}
.tabs{
  display: flex;
  padding-left: 24rpx;
  padding-right: 24rpx;
  background-color: #FFFFFF;
  margin-bottom: 24rpx;
  height: 88rpx;
  align-items: center;
}
.tab{
  flex: 1;
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #919191;
  letter-spacing: 2rpx;
  text-align: center;
  font-weight: normal;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;

}
.tab--selected{
  color: #FE0000;
  position: relative;
}
.line--selected{
  width: 44rpx;
  height: 4rpx;
  background-color: #FE0000;
  position: absolute;
  left: 50%;
  bottom:0;
  margin-left: -22rpx;
}

.columns{
  display: flex;
  padding-left: 24rpx;
  padding-right: 24rpx;
  background-color: #FFFFFF;
  margin-bottom: 24rpx;
  height: 156rpx;
  align-items: center;
}
.column{
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.column:nth-child(1){
  border-right: 1rpx solid #DEDEDE;
}
.column:nth-child(2){
  border-right: 1rpx solid #DEDEDE;
}
.column_label{
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #616161;
  letter-spacing: 0;
  text-align: center;
}
.column_value{
  font-family: PingFangSC-Medium;
  font-size: 40rpx;
  color: #262626;
  letter-spacing: 0;
  text-align: center;
}

