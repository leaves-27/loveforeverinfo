input[type="text"],input[type="password"],textarea,button{
    outline-style: none;
    -webkit-appearance: none;
    padding: 0;
    padding: 0;
    margin: 0;
    margin: 0;
    outline: none;
}
button::after {
    border: none;
}
.button--default{
    background-image: none;
    background-color: #FFFFFF;
    border: 2rpx solid #DDDDDD;
    color: #1E1E1E;
}
.button--active{
    background-image: linear-gradient(-140deg, #FF6060 0%, #FE0000 100%);
    color: #FFFFFF;
    border: none;
}

.button--disabled{
    background: #DEDEDE;
    color: #FFFFFF;
    border: none;
}

.button-interval--small{
    margin-left: 16rpx;
}
