.modal{
  position: fixed;
  left: 0rpx;
  top: 0rpx;
  width: 100%;
  height: 100%;
}
.modal-mask{
  width: 100%;
  height: 100%;
  background-color: rgba(0,0,0,0.6);
}
.modal-main{
  background-color: #FFFFFF;
  min-width: 100rpx;
  min-height: 30rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}
