.tabs{
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #FFFFFF;
  width: 100%;
  height: 100rpx;
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 10;
  box-shadow: 0rpx -5rpx 10rpx 5rpx rgba(0, 0, 0, 0.2);
}
.tab{
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.tab_text{
  font-size: 24rpx;
  color: #7F8389;
}
.tab_text--selected{
  color: #FE0000;
}
.tab_icon{
  width: 54rpx;
  height: 54rpx;
}
